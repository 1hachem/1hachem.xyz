---
interface Props {
    title?: string;
    description?: string;
}

import Navbar from "../components/NavBar.astro";
import Footer from "../components/Footer.astro";
import "@fontsource-variable/jetbrains-mono";

const title = (Astro.props as Props).title || "1hachem.xyz";
const description =
    (Astro.props as Props).description || "Hachem Betrouni personal website";
---

<html>
    <head>
        <meta charset="UTF-8" />
        <meta name="viewport" content="width=device-width" />
        <link rel="icon" type="image/png" href="/favicon.png" />
        <meta name="generator" content={Astro.generator} />
        <link rel="sitemap" href="/sitemap-index.xml" />
        <title>{title || "1hachem.xyz"}</title>
        {description && <meta name="description" content={description} />}
    </head>
    <body class="bg-black text-white min-h-screen flex flex-col font-jet">
        <div class="min-h-screen">
            <Navbar />
            <slot />
        </div>
        <Footer />
    </body>
</html>
