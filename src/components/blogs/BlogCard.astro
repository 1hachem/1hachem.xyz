---
import type { CollectionEntry } from "astro:content";

export interface Props {
  id: string;
  title: string;
  description: string;
  tag: string;
}

const { id, title, description, tag } = Astro.props;
---

<li class="list-none">
  <a href={`/blog/${id}`} data-astro-prefetch class="group hover:no-underline">
    <div class="flex flex-col">
      <h1 class="text-xl font-semibold hover:underline">&gt; {title}</h1>
      <p>{description}</p>
      <div class="mt-2 text-xs font-bold">#{tag}</div>
    </div>
  </a>
</li>
