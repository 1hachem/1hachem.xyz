---
import { Code, Checkbox, Pencil1, Quote } from "@astropub/icons";
type Props = {
  calloutType: "note" | "todo" | "bug" | "quote";
};

const { calloutType } = Astro.props;
---

<div
  class={`flex gap-2 p-2 rounded-t-lg items-center
${calloutType === "note" ? "bg-primary" : ""}
${calloutType === "todo" ? "bg-primary" : ""}
${calloutType === "bug" ? "bg-red text-black" : ""}
${calloutType === "quote" ? "bg-secondary text-background" : ""}
`}
>
  <div class="w-5">
    {calloutType === "note" && <Code />}
    {calloutType === "todo" && <Checkbox />}
    {calloutType === "bug" && <Pencil1 />}
    {calloutType === "quote" && <Quote />}
  </div>
  <slot />
</div>
