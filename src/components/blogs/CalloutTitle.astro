---
import { Code, Checkbox, Pencil1, Quote, Mix } from "@astropub/icons";
type Props = {
  calloutType: "note" | "todo" | "bug" | "quote" | "verse";
};

const { calloutType } = Astro.props;
---

<div class="flex items-center gap-2 rounded-t-lg px-4 py-2 text-sm">
  <div class="w-4">
    {calloutType === "note" && <p>💡</p>}
    {calloutType === "todo" && <p>✔️</p>}
    {calloutType === "bug" && <p>🐛</p>}
    {calloutType === "quote" && <p>💬</p>}
    {calloutType === "verse" && <p>📖</p>}
  </div>
  <slot />
</div>
