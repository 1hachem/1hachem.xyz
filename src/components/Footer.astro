---
import Wave from "@/components/Wave";
---

<footer class="relative flex w-full justify-center py-10">
  <div class="absolute bottom-0 w-full rotate-180 transform opacity-10">
    <Wave
      client:only
      colorStops={["#507DBC", "#A1C6EA", "#DAE3E5"]}
      blend={0.5}
      amplitude={1.0}
